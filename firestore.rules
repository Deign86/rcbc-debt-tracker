rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access (no authentication required)
    // Note: This is suitable for single-user applications or prototypes
    // For production with multiple users, implement proper authentication
    
    match /debtState/{document=**} {
      allow read, write: if true;
    }
    
    match /payments/{document=**} {
      allow read, write: if true;
    }
  }
}
